DB_TYPE=mysql
DB_HOST=localhost
DB_NAME=your_database_name
DB_USERNAME=your_username
DB_PASSWORD=your_password
DB_PATH=/path/to/your/sqlite/database
USE_ENCRYPTION=true
ENCRYPTION_KEY=your_encryption_key
DB_CONNECTION_TIMEOUT=5
DB_FAILOVER_HOST=failover_host
DB_FAILOVER_PORT=failover_port
DB_FAILOVER_USERNAME=failover_username
DB_FAILOVER_PASSWORD=failover_password
CACHE_TTL=3600
QUERY_BUILDER_ENABLED=true
SLOW_QUERY_THRESHOLD=2
SHARDING_CONFIG=/path/to/your/sharding_config.json
METADATA_CACHE_TTL=3600
QUERY_RETRY_ATTEMPTS=3
QUERY_RETRY_DELAY=1000
